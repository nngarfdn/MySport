<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    xmlns:android="http://schemas.android.com/apk/res/android" />
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:src="@drawable/home" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rec_bg"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Berat"
            android:textColor="@color/black"
            android:fontFamily="@font/futura_bold_font"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginBottom="300dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="@dimen/margin_left_16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="50dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_account_circle_black_24dp" />

                    <TextView
                        android:id="@+id/text_view_hasil_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_top_8dp"
                        android:text="Nama : "
                        android:fontFamily="@font/futura_bold_font"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_weight"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/text_view_hasil_bb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="88 KG "
                            android:fontFamily="@font/futur"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/margin_top_8dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/height" />

                        <TextView
                            android:id="@+id/text_view_hasil_tb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/futur"
                            android:padding="4dp"
                            android:text="881 CM"
                            android:textSize="14sp"
                             />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="@dimen/margin_top_8dp"
                android:layout_marginHorizontal="@dimen/margin_left_16dp"
                android:layout_marginTop="@dimen/margin_left_16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_left_16dp">

                    <TextView
                        android:id="@+id/text_view_hasil_bmi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hasil BMI : "
                        android:textColor="@color/black"
                        android:fontFamily="@font/futur"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginTop="@dimen/margin_left_16dp"
                        android:id="@+id/text_view_hasil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futur"
                        android:text="Hasil : "
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                 <TextView
                     android:layout_marginTop="@dimen/margin_left_16dp"
                android:id="@+id/text_view_hasil_ket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                     android:fontFamily="@font/futura_medium_condensed_t"
                      android:text="@string/lorem"
                android:textSize="18sp"
                     android:textColor="@color/black"
               />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

</androidx.core.widget.NestedScrollView>